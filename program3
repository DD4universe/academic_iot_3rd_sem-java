import java.util.*;
class Account {
    String name; double balance;
    Account(String n,double b){name=n;balance=b;}
}
class Bank extends Account {
    Bank(String n,double b){super(n,b);}
    void deposit(double amt){balance+=amt;System.out.println("Deposited:"+amt+" Balance:"+balance);}
    void withdraw(double amt){
        if(amt<=balance){balance-=amt;System.out.println("Withdrawn:"+amt+" Balance:"+balance);}
        else System.out.println("Insufficient Balance!");
    }
}
class Main3 {
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.print("Account holder name: "); String n=sc.next();
        System.out.print("Opening balance: "); double b=sc.nextDouble();
        Bank acc=new Bank(n,b);
        System.out.print("Enter deposit amount: "); acc.deposit(sc.nextDouble());
        System.out.print("Enter withdrawal amount: "); acc.withdraw(sc.nextDouble());
    }
}